# LindormMemobase Environment Setup
# Copy this to your .env file

# Required: OpenAI API Key for LLM processing
MEMOBASE_LLM_API_KEY=your-openai-api-key-here

# Optional: Custom LLM settings
MEMOBASE_BEST_LLM_MODEL=gpt-4o-mini
MEMOBASE_THINKING_LLM_MODEL=o1-mini
MEMOBASE_SUMMARY_LLM_MODEL=gpt-4o-mini

# Optional: Language setting
MEMOBASE_LANGUAGE=en

# Optional: Embedding settings (if you want semantic search)
MEMOBASE_EMBEDDING_PROVIDER=openai
MEMOBASE_EMBEDDING_API_KEY=your-openai-api-key-here
MEMOBASE_EMBEDDING_MODEL=text-embedding-3-small

# Optional: Advanced settings
MEMOBASE_MAX_CHAT_BLOB_BUFFER_PROCESS_TOKEN_SIZE=8192
MEMOBASE_MAX_PROFILE_SUBTOPICS=15