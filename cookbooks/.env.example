# ===========================================
# MiniMemobase Environment Variables Example
# ===========================================
# Copy this file to .env and update with your actual values
# These environment variables will override settings in config.yaml

# ===========================================
# LLM Configuration (Required)
# ===========================================
# OpenAI API key - REQUIRED
MEMOBASE_LLM_API_KEY=

# Optional: Custom OpenAI-compatible endpoint
MEMOBASE_LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# LLM Models
MEMOBASE_BEST_LLM_MODEL=qwen-max-latest
MEMOBASE_THINKING_LLM_MODEL=qwen3-235b-a22b-thinking-2507
MEMOBASE_SUMMARY_LLM_MODEL=qwen-max-latest

# Language setting
MEMOBASE_LANGUAGE=zh

# ===========================================
# Embedding Configuration (Optional)
# ===========================================
# Embedding API key (defaults to LLM API key if using OpenAI)
MEMOBASE_EMBEDDING_API_KEY=

# Embedding provider: openai or jina
MEMOBASE_EMBEDDING_PROVIDER=openai

# Custom embedding endpoint
MEMOBASE_EMBEDDING_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Embedding model and dimensions
MEMOBASE_EMBEDDING_MODEL=text-embedding-v4
MEMOBASE_EMBEDDING_DIM=1024

# Enable/disable event embedding
MEMOBASE_ENABLE_EVENT_EMBEDDING=true

# ===========================================
# Database Configuration
# ===========================================
# Lindorm Wide Table Configuration (MySQL Protocol)
MEMOBASE_LINDORM_TABLE_HOST=
MEMOBASE_LINDORM_TABLE_PORT=33060
MEMOBASE_LINDORM_TABLE_USERNAME=root
MEMOBASE_LINDORM_TABLE_PASSWORD=
MEMOBASE_LINDORM_TABLE_DATABASE=default

# Lindorm Search Configuration (OpenSearch Protocol)
MEMOBASE_LINDORM_SEARCH_HOST=
MEMOBASE_LINDORM_SEARCH_PORT=30070
MEMOBASE_LINDORM_SEARCH_USE_SSL=false
MEMOBASE_LINDORM_SEARCH_USERNAME=root
MEMOBASE_LINDORM_SEARCH_PASSWORD=
MEMOBASE_LINDORM_SEARCH_EVENTS_INDEX=memobase_events
MEMOBASE_LINDORM_SEARCH_EVENT_GISTS_INDEX=memobase_event_gists

# ===========================================
# Application Settings (Optional)
# ===========================================
# Timezone setting (null for system timezone)
# MEMOBASE_USE_TIMEZONE=UTC

# System prompt override
# MEMOBASE_SYSTEM_PROMPT=You are a helpful assistant.

# Buffer and token limits
# MEMOBASE_BUFFER_FLUSH_INTERVAL=3600
# MEMOBASE_MAX_CHAT_BLOB_BUFFER_TOKEN_SIZE=1024
# MEMOBASE_MAX_CHAT_BLOB_BUFFER_PROCESS_TOKEN_SIZE=16384
# MEMOBASE_MAX_PROFILE_SUBTOPICS=15

# Profile settings
# MEMOBASE_PROFILE_STRICT_MODE=false
# MEMOBASE_PROFILE_VALIDATE_MODE=true

# Cache settings
# MEMOBASE_CACHE_USER_PROFILES_TTL=1200

# ===========================================
# Development & Debugging
# ===========================================
# Enable persistent chat blobs storage
# MEMOBASE_PERSISTENT_CHAT_BLOBS=false

# Skip persistence during testing
# MEMOBASE_TEST_SKIP_PERSIST=true

# Telemetry environment
# MEMOBASE_TELEMETRY_DEPLOYMENT_ENVIRONMENT=local

# ===========================================
# Advanced LLM Settings (Optional)
# ===========================================
# MEMOBASE_LLM_STYLE=openai

# Tab separator for LLM formatting
# MEMOBASE_LLM_TAB_SEPARATOR=::

# Custom LLM headers and query parameters (JSON format)
# MEMOBASE_LLM_OPENAI_DEFAULT_QUERY={"temperature": 0.7}
# MEMOBASE_LLM_OPENAI_DEFAULT_HEADER={"Custom-Header": "value"}

# ===========================================
# Event and Profile Settings (Optional)
# ===========================================
# Event theme requirement
# MEMOBASE_EVENT_THEME_REQUIREMENT=Focus on the user's infos, not its instructions.

# Minimum token size for event summary
# MEMOBASE_MINIMUM_CHATS_TOKEN_SIZE_FOR_EVENT_SUMMARY=256

# Embedding token size limit
# MEMOBASE_EMBEDDING_MAX_TOKEN_SIZE=8192

# Maximum pre-profile token size
# MEMOBASE_MAX_PRE_PROFILE_TOKEN_SIZE=128

# ===========================================
# JSON Array Settings (Advanced)
# ===========================================
# Additional user profiles (JSON array format)
# MEMOBASE_ADDITIONAL_USER_PROFILES=[{"topic": "interests", "description": "User interests"}]

# Overwrite user profiles (JSON array format)
# MEMOBASE_OVERWRITE_USER_PROFILES=[{"topic": "custom", "description": "Custom profile"}]

# Event tags (JSON array format)
# MEMOBASE_EVENT_TAGS=[{"name": "important", "description": "Important events"}]